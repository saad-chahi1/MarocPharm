@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <br />

    <div class="container">
        @if (Model.Count() > 0)
        {
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 col-xl-3">
                        <div class="card">                           
                            <center>
                                <a href="#">
                                    @if (product.Image != null)
                                    {
                                        <img img src="~/images/@product.Image" width="195" height="195"  />
                                    }
                                    else
                                    {
                                        <img class="card-img-top img-fluid" src="~/images/system/no-image.png" alt="@product.Name" />
                                    }
                                </a>
                            </center>
                            <div class="card-block">
                                <a href="#" class="card-title text-muted" title="@product.Name">@product.Name</a>
                                <div class="card-text">
                                    
                                        @product.Price.ToString("C2")
                                    
                                </div>
                            </div>
                            <div class="card-footer">
                                <form asp-area="" asp-controller="Cart" asp-action="Add" method="post">
                                    <input type="hidden" value="@product.Id" name="id" />
                                    <button type="submit" id="addToCart" class="btn btn-primary btn-sm">Add to cart</button>                                   
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="col-md-12">
                <h5>No product on database</h5>
            </div>
        }
    </div>
